# ==============================================
# SERVER
# ==============================================
PORT=4000
NODE_ENV=development

# ==============================================
# SUPABASE
# ==============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# ==============================================
# CORS / FRONTEND / BACKEND
# ==============================================
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000

# ==============================================
# REDIS (Optional in development)
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# WHATSAPP
# ==============================================
# Local: ./whatsapp-sessions
# Production (Railway): /data/whatsapp-sessions
WHATSAPP_SESSION_PATH=./whatsapp-sessions

# Number to receive keepalive messages (with country code)
KEEPALIVE_TARGET_NUMBER=+34XXXXXXXXX

# ==============================================
# PUPPETEER (Production only)
# ==============================================
# PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
# PUPPETEER_EXECUTABLE_PATH=/nix/var/nix/profiles/default/bin/chromium

# ==============================================
# STRIPE (Payments)
# ==============================================
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_PRO_MONTHLY=price_xxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxx
STRIPE_PRICE_BUSINESS_MONTHLY=price_xxxxx
STRIPE_PRICE_BUSINESS_YEARLY=price_xxxxx
